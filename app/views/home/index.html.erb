<div class="front">
	<h1><div id="title">Hack Vault</div></h1>
	<h2><div id="sub-title">Store Everything You Find In One Place</div></h2>
	<div id="home-search">
		<%= form_tag(resources_path, :method => "get", class: "pure-form", id: "search-form") do %>
		<div class="input-append">
			<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Hack Vault" %>
	      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
	      of using a Rails form helper -->
	      <%= submit_tag "\uf002", :class => 'pure-button pure-button-primary fontawesome' %>
	    </div>
	    <% end %>
	</div>
</div>