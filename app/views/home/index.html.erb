<div class="front">
	<h1><div id="title">Hack Vault</div></h1>
	<h2><div id="sub-title">Store Everything You Find In One Place</div></h2>
	<div id="home-search">
		<!-- When submit the form, the view rendered will be the index view of our articles resource -->
		<%= form_tag(categories_path, :method => "get", class: "pure-form", id: "search-form") do %>
		<div class="input-append">
			<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Hack Vault" %>
	      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
	      of using a Rails form helper -->
	      <button class="pure-button pure-button-primary" type="submit"><i class="fa fa-search"></i></button>
	    </div>
	    <% end %>
	</div>
</div>