<h1>Forgot your password?</h1>

<div class="center-form">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "pure-form" }) do |f| %>
	  <%= devise_error_messages! %>

	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, autofocus: true %></div>

	  <div><%= f.submit "Send me reset password instructions", :class => 'pure-button pure-button-primary'  %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>