<div class="pure-g">
	<% @categories.each_with_index do |category, index| %>
		<div class="pure-u-1-2">
		<a href="/categories/<%= category.id %>">
			<div class="category-thumb">
			<div class="category-info">
				<h2><%= category.title %></h2>
				<p><%= category.description %></p>
			</div>
			</div>
		</a>
		</div>
	<% end %>
</div>
