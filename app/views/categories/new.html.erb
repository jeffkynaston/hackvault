<h1>Create A New Category</h1>
<div class="center-form">
	<%= form_for @category, html: {class: "pure-form-stacked"} do |f| %>
	  <%= f.label :title %>
	  <%= f.text_field :title %><br />

	  <%= f.label :description %>
	  <%= f.text_area :description %><br />

	  <%= f.submit "Create Category", :class => 'pure-button pure-button-primary' %>
	<% end %>
</div>